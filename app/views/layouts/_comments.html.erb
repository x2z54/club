
      <div class='comments'>        
        <% @post.comments.each do |comment| %>
        <div class="entry clearfix" >
            <a href='/users/1/kuba'><img  src="http://www.windsorultimate.com/files/user_kuba_bc88910ba4e3c242df4c90c4194b9ed0.jpg" height="32" width="32" title="Click to view user profile" alt="Click to view user profile" class="member-photo"></a>
          <div class="text">  
            <span class='user bold'><%= link_to comment.commenter, :controller => :users, :action => :show, :id => 1  %></span>
              <%= comment.body %>
              <%= if @current_user and @current_user[:role] == "Admin"
              link_to image_tag('delete-icon.png'), [@post, comment], :method => :delete, :style => "float:right"
              else
              end %>
          </div>
          <div class="details">
            <span class='date ' title='2013-05-09 09:46:53'>May 09 at 09:46AM</span>
          </div>

        
        </div>
        <% end %>
      </div>