= form_for(@subcategory) do |f|
  - if @subcategory.errors.any?
    #error_explanation
      %h2
        = pluralize(@subcategory.errors.count, "error")
        prohibited this brand from being saved:
      %ul
        - @subcategory.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :title
  %hr
    .field
      = f.cktext_area :text, :ckeditor => {:uiColor => "#AADC6E", :toolbar => "full"}
    %br
      .actions
        = f.submit "Добавить", :class=> "btn btn-primary"
        = link_to  "Назад", subcategories_path, :class=> "pull-right btn btn-danger"